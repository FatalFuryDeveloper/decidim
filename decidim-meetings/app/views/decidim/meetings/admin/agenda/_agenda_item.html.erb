<% agenda_item = form.object %>
<div class="card meeting-agenda-item" id="<%= id %>-field">
  <div class="card-divider agenda-item-divider">
    <h2 class="card-title">
      <span>
        <%== "#{icon("move")} #{t(".agenda_item")}" %>
      </span>

      <button class="button small alert hollow move-up-agenda-item button--title">
        <%== "#{icon("arrow-top")} #{t(".up")}" %>
      </button>

      <button class="button small alert hollow move-down-agenda-item button--title">
        <%== "#{icon("arrow-bottom")} #{t(".down")}" %>
      </button>

      <button class="button small alert hollow remove-agenda-item button--title">
        <%= t(".remove") %>
      </button>
    </h2>
  </div>

  <div class="card-section">
    <div class="grid-x">
      <div class="cell auto">
        <%= form.translated :text_field, :title, tabs_id: id %>
      </div>
      <div class="cell small-2">
        <%= form.number_field :duration, tabs_id: id, min: 0  %>
      </div>
    </div>

    <div class="grid-x">
      <div class="cell auto">
        <%= form.translated :text_area, :description, tabs_id: id, rows: 6 %>
      </div>
    </div>

    <div class="grid-x">
      <div class="cell">
        <label>Fichero</label>
        <input type="file" />
      </div>
    </div>
    <div class="grid-x">
      <div class="cell">
        <ul></ul>
      </div>
    </div>

    <%= form.hidden_field :id %>
    <%= form.hidden_field :parent_id %>
    <%= form.hidden_field :position, value: agenda_item.position || 0  %>
    <%= form.hidden_field :deleted  %>

    <div class="grid-x mt-s">
      <div class="card">
        <div class="card-divider">
          <h2 class="card-title">
            <div class="flex--sbc flex-gap--1">
              Items
              <button class="button tiny" type="button">Nuevo</button>
            </div>
          </h2>
        </div>
        <div class="card-section">
          <div class="grid-x align-center p-s">
            La agenda está actualmente vacía...<a href="">&nbsp;añade un subitem</a>
          </div>
        </div>
      </div>
    </div>

  </div>
</div>
