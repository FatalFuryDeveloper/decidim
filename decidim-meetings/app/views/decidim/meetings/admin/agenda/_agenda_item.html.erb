<% agenda_item = form.object %>
<div class="card meeting-agenda-item" id="<%= id %>-field">
  <div class="card-divider agenda-item-divider">
    <h2 class="card-title">
      <span>
        <%== "#{icon("move")} #{t(".agenda_item")}" %>
      </span>

      <button class="button small alert hollow move-up-agenda-item button--title">
        <%== "#{icon("arrow-top")} #{t(".up")}" %>
      </button>

      <button class="button small alert hollow move-down-agenda-item button--title">
        <%== "#{icon("arrow-bottom")} #{t(".down")}" %>
      </button>

      <button class="button small alert hollow remove-agenda-item button--title">
        <%= t(".remove") %>
      </button>
    </h2>
  </div>

  <div class="card-section">
    <%= render 'agenda_item_fields', id: id, form: form, agenda_item: agenda_item  %>

    <div class="card">
      <div class="card-divider">
        <h2 class="card-title">Agenda Item childs<%#= t(".agenda_items")%></h2>
      </div>
      <div class="card-section">
        <div class="meeting-agenda-item-childs">
          <template>
            <%= fields_for "meeting_agenda[agenda_items][#{agenda_item.to_param}][#{blank_agenda_item_child.to_param}]", blank_agenda_item_child do |agenda_item_child_form| %>
              <%= render "agenda_item_child", form: agenda_item_child_form, id: tabs_id_for_agenda_item(agenda_item_child_form), editable: true %>
            <% end %>
          </template>

          <div class="meeting-agenda-item-childs-list">
            <%# @form.agenda_items.each do |agenda_item| %>
              <%#= fields_for "meeting_agenda[agenda_items][]", agenda_item do |agenda_item_form| %>
                <%#= render "agenda_item", form: agenda_item_form, id: tabs_id_for_agenda_item(agenda_item), editable: true %>
              <%# end %>
            <%# end %>
          </div>

          <button class="button add-agenda-item-child">Add subitem<%#= t(".add_agenda_item") %></button>
        </div>
      </div>
    </div>
  </div>
</div>
