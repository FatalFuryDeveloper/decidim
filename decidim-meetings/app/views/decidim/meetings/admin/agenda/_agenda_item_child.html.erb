<% agenda_item_child = form.object %>
<div class="card meeting-agenda-item-child" id="<%= id %>-field">
  <div class="card-divider agenda-item-divider">
    <h2 class="card-title">
      <span>
        <%#== "#{icon("move")} #{t(".agenda_item")}" %>
        <%== "#{icon("move")} subitem" %>
      </span>

      <button class="button small alert hollow move-up-agenda-item button--title">
        <%#== "#{icon("arrow-top")} #{t(".up")}" %>
        <%== "#{icon("arrow-top")} up" %>
      </button>

      <button class="button small alert hollow move-down-agenda-item button--title">
        <%#== "#{icon("arrow-bottom")} #{t(".down")}" %>
        <%== "#{icon("arrow-bottom")} down" %>
      </button>

      <button class="button small alert hollow remove-agenda-item-child button--title">
        <%#= t(".remove") %>
        remove
      </button>
    </h2>
  </div>

  <div class="card-section">
    <%= render 'agenda_item_fields', id: id, form: form, agenda_item: agenda_item_child  %>
  </div>
</div>
