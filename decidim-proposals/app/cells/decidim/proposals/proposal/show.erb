<div class="column">
  <article class="card card--proposal">
    <div class="card__content">
      <div class="card__header">
        <%#= link_to proposal do%>
        <%= link_to resource_path do %>
          <h5 class="card__title"><%= title %></h5>
          <span class="badge">
            <%= resource_type %>
          </span>
        <% end %>
        <div class="card__author author-data author-data--small">
          <%#= render partial: "decidim/shared/author_reference", locals: { author: present(model).author } %>
        </div>
        <div class="tech-info tech-info--text-left">
          <%#= t(".creation_date", date: l(model.created_at, format: :decidim_short)) %>
        </div>
        <%#= resource_reference(model, class: "tech-info--text-left") %>
      </div>
      <%#= render partial: "proposal_badge", locals: { proposal: proposal } %>
      <p><%= truncate(model.body, length: 100) %></p>
      <%#= render partial: "decidim/shared/tags", locals: { resource: model, tags_class_extra: "tags--proposal" } %>
      <%= cell("decidim/category", model.category) %>
    </div>
    <div class="card__footer">
      <div class="card__support">
        <%# if current_settings.votes_enabled? && !model.draft? %>
          <%#= render partial: "votes_count", locals: { proposal: model, from_proposals_list: true } %>
          <%#= render partial: "vote_button", locals: { proposal: model, from_proposals_list: true } %>
        <%# else %>
          <div class="card__support__data"></div>
          <%#= link_to t(".view_proposal"), model, class: "card__button button small secondary" %>
        <%# end %>
      </div>
    </div>
  </article>
</div>
